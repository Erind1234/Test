<body>
    <div class="container">
        <h1>Fiscalization</h1>

        <div class="form-group">
            <input type="text" name="searchBox" class="form-control search-box" placeholder="Enter search criteria" />
            <button type="submit" class="btn btn-primary ml-2">Search</button>
        </div>

        <div class="table-container" id="resultTable" style="display: none;">
            <!-- Table content will be displayed here -->
            @if (!string.IsNullOrEmpty(ViewBag.p1))
            {
                using (Html.BeginForm("SaveFiscalization", "Fiscalization", FormMethod.Post))
                {
                    <!-- Add the table and other form elements here as before -->
                }
            }
        </div>

        <div class="form-group mt-4">
            <input type="text" id="REFCODE" class="form-control search-box" placeholder="Enter REFCODE" />
            <button id="searchByRefcode" class="btn btn-success ml-2">Search by REFCODE</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // Add an event listener for the "Search by REFCODE" button
            $("#searchByRefcode").click(function () {
                var refcode = $("#REFCODE").val();
                if (refcode !== "") {
                    $.post("/Fiscalization/SearchByRefcode", { REFCODE: refcode }, function (data) {
                        $("#resultTable").html(data);
                        $("#resultTable").show();
                    });
                }
            });
        });
    </script>
