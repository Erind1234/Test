$(document).ready(function () {
        // Function to update QRCODEVAL before form submission
        function updateQRCODEVAL() {
            var searchBoxValue = $("#searchBox").val();
            $("#QRCODEVAL").val(searchBoxValue);
        }

        // Attach the updateQRCODEVAL function to the form submission event
        $("#mainForm").submit(function () {
            updateQRCODEVAL();
        });
