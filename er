<script>
    $(document).ready(function () {
        // Function to update DATTIMSEND field with the current date and time
        function updateDATTIMSEND() {
            var currentDate = new Date();
            var formattedDate = currentDate.toISOString(); // Convert to ISO 8601 format
            $("#DATTIMSEND").val(formattedDate);
        }

        // Handle the "Ruaj" button click event
        $("#ruajButton").click(function (e) {
            e.preventDefault(); // Prevent the form from submitting prematurely
            updateDATTIMSEND(); // Update the DATTIMSEND field with the current date and time
            // You can add any additional logic for form submission here if needed

            // Now you can submit the form or perform any other required actions
            $("form").submit();
        });
    });
</script>
