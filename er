/* Add CSS styles for freezing the table */
.fixed-table {
    position: fixed;
    top: 140px; /* Adjust the top position as needed */
    left: 100px; /* Adjust the left position as needed */
    width: 200px; /* Adjust the initial width as needed */
    height: 0; /* Start with a height of 0 */
    background-color: #f9f9f9; /* Set background color */
    overflow-y: auto; /* Enable vertical scrolling if needed */
    z-index: 1;
}

/* Add CSS styles to show the table when needed */
.fixed-table.show {
    height: 150px; /* Adjust the height when the table is shown */
    border: 1px solid #ccc; /* Add borders when the table is shown */
}
