<script>
    $(document).ready(function () {
        // Add an event listener for the "Search" button for the first search box
        $("#searchButton1").click(function () {
            var searchTerm = $("#searchBox1").val();
            if (searchTerm !== "") {
                // Make an AJAX request to fetch the table data
                $.post("/Fiscalization/SearchByTerm", { searchTerm: searchTerm }, function (data) {
                    $("#resultTable").html(data);
                    $("#resultTable").show();
                });
            }
        });

        // Add an event listener for the "Search by REFCODE" button for the second search box
        $("#searchByRefcode").click(function () {
            var refcode = $("#REFCODE").val();
            if (refcode !== "") {
                // Make an AJAX request to fetch the table data
                $.post("/Fiscalization/SearchByRefcode", { REFCODE: refcode }, function (data) {
                    $("#resultTable").html(data);
                    $("#resultTable").show();
                });
            }
        });
    });

    // JavaScript function to hide the table
    function hideTable() {
        $("#resultTable").hide();
    }
</script>
