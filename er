<script>
    $(document).ready(function () {
        // Function to update DATTIMSEND field with the current local date and time
        function updateDATTIMSEND() {
            var currentDate = new Date(); // Get current date and time in the user's timezone
            var formattedDate = formatDate(currentDate); // Format the date as needed
            $("#DATTIMSEND").val(formattedDate);
        }

        // Function to format the date as "yyyy-mm-dd HH:mm:ss"
        function formatDate(date) {
            var year = date.getFullYear();
            var month = String(date.getMonth() + 1).padStart(2, "0");
            var day = String(date.getDate()).padStart(2, "0");
            var hours = String(date.getHours()).padStart(2, "0");
            var minutes = String(date.getMinutes()).padStart(2, "0");
            var seconds = String(date.getSeconds()).padStart(2, "0");
            return year + "-" + month + "-" + day + " " + hours + ":" + minutes + ":" + seconds;
        }

        // Handle the click event for any button with type="submit"
        $("button[type='submit']").click(function (e) {
            e.preventDefault(); // Prevent the form from submitting prematurely
            
            // Check if this button is the "Ruaj" button or any other submit button
            if ($(this).hasClass("btn-primary")) {
                updateDATTIMSEND(); // Update the DATTIMSEND field with the current local date and time
                // You can add any additional logic for form submission here if needed
            }
            
            // Now you can submit the form or perform any other required actions
            $("form").submit();
        });
    });
</script>
