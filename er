SELECT GLAATCOMP,GLAATATLB,GLAATVADA,GLAATPARA,GLAATLOGL,GLAATCCYM,GLAATCDFL,GLAATAFCY,GLAATRATE,GLAATALCY,GLAATRES1,GLAATRES2,GLAATXRHS,GLAATPERI,GLAATCNTR,GLAATERGO,GLAFIL1,GLAFIL2,GLAFIL3,GLAFIL4
FROM OPENQUERY(live, '
    SELECT GLAATCOMP,GLAATATLB,GLAATVADA,GLAATPARA,GLAATLOGL,GLAATCCYM,GLAATCDFL,GLAATAFCY,GLAATRATE,GLAATALCY,GLAATRES1,GLAATRES2,GLAATXRHS,GLAATPERI,GLAATCNTR,GLAATERGO,GLAFIL1,GLAFIL2,GLAFIL3,GLAFIL4
    FROM XGLINTF.A' + CONVERT(VARCHAR(8), DATEADD(DAY, -1, GETDATE()), 112) + '
');
