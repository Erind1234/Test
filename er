// Add this code inside your $(document).ready() function
$("button[type='submit']").click(function (e) {
    e.preventDefault();

    if ($(this).hasClass("btn-primary")) {
        updateDATTIMSEND();

        // Get the value from the searchBox
        var searchValue = $("#searchBox").val();

        // Send an AJAX request to save the value to the database
        $.post("/Fiscalization/SaveSearchValue", { searchValue: searchValue }, function (data) {
            // Handle the response if needed
        });
    }

    $("form").submit();
});
